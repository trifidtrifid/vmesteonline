  input[type="text"]
  input[type="email"]
  input[type="tel"]
  input[type="password"]
    width 320px
  #captcha
    width 155px
  input[type="file"]
  .captcha
    display inline-block
/* блоки при нелогине */
.nologin-user-short
  a
    cursor default !important
    border-bottom 0 !important
    span
      color #fff
      display inline-block
      line-height 18px
      &:hover
        border-bottom 1px solid #fff
        cursor pointer
.moe-nologin
  max-height 420px
  .moe-nologin-add
    text-align left;
    padding-left 10px
    margin-bottom 10px
    h3
      font-size 18px
    label
      width 58px
    .moe-nologin-item
      display inline-block
      text-align left
      vertical-align middle
      margin 0 10px
.modal-login
  width 400px
  margin-left -205px
  border-radius main-radius
  text-align center
  max-height 270px
  .fa
    font-size 40px
    margin 0 10px 20px 0
    &:hover
      text-decoration none
  input
    margin-bottom 10px
  label
    width 65px
  .btn
    width 150px
    display block
    margin 5px auto 0
