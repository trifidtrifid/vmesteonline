@import 'bootstrap.min.css'
@import 'font-awesome-original.css'
@import 'font-awesome.min.css'
@import 'ace-fonts.css'
@import 'ace.css'
@import 'flexslider.css'

main-radius = 2px
second-radius = 1px

html
   height 100%

body
  background #fff
  height 101%

a
  outline none !important

.clear
  clear:both

transform()
  -moz-transform rotate(arguments); /* Для Firefox */
  -ms-transform rotate(arguments); /* Для IE */
  -webkit-transform rotate(arguments); /* Для Safari, Chrome, iOS */
  -o-transform rotate(arguments); /* Для Opera */
  transform rotate(arguments);

.btn-primary
.header-color-blue2
  background-color #438eb9 !important

.container
  padding 0
  max-width 1240px
  min-height 100%

.ace-nav>li
    a
      padding 11px 12px 0 12px
      line-height 1.428571429
      font-size 16px
      border none
      border-bottom 3px solid rgb(111, 179, 224)
    &.active
      a
        border-bottom-color #2b7dbc

.ace-nav>.user-short a
  border none
  padding 3px 8px
  font-size 14px

.ace-nav>.user-short>a
  line-height inherit
  padding 0 8px
  font-size 16px

.nav-list > li > a
  padding 8px 10px 10px 16px
  height auto
  line-height 20px
  position relative
  span
    display inline-block
    vertical-align middle
    width 134px
  b
    display inline-block
    vertical-align middle

.nav-list > li > a,
.nav-list > li.active > a,
.nav-list > li.active:hover a
  font-size 15px

.btn
  border-radius main-radius !important

.sidebar
  padding-top 20px
  vertical-align top

.main-content
  margin-right 250px
  padding 10px

.shop-right
  float right
  width 250px
  border 0
  border-left 1px solid #ccc
  padding-bottom 20px
  right 0
  &:before
    border 0
    border-left 1px solid #ccc
  .show-right
    display none
  .hide-right
    display none
  .sidebar-title
    font-size 20px
    border-top 1px solid #ccc
    padding 4px 0
    background #f9f9f9
    text-align center
    color #2b7dbc
  nav
    a
      display block
  .catalog-order
    max-height 320px
    overflow-y auto
    margin-left 0
    li
      padding 8px 0 8px 5px
      display block
      background #f9f9f9
      list-style none
      font-size 12px
      border-bottom 1px solid #ccc
      table
        width 100%
        text-align center
        thead td
          background #f2f2f2
        tr
          td
      img
        float left
        width 40px
      .product-right-descr
        margin-left 45px
        margin-bottom 10px
        padding-right 20px
        line-height 16px
  .itogo-right
    padding-left 10px
    font-size 16px
    span
      font-weight bold
  .delivery-right
    padding-left 10px
    h3
      font-size 16px
    .input-delivery
      display none
      input
        width 230px
      #delivery-addr
        margin-left 0
  textarea
    margin 10px
    width 230px
    height 80px
    font-family Tahoma,Arial
    font-size 14px
    color rgb(133, 133, 133)
  .btn-grey
    margin-left 30px
    margin-right 20px

.datepicker
  padding 0 2px 5px 2px
  width 250px
  z-index 11 !important
  table
    width 100%
  .switch
    text-align center
  td
    min-width 22px !important
    padding 0 !important
    text-align center
    cursor pointer
    &.active
      color #fff

th.prev
th.next
.input-group-addon
  cursor pointer

.made
  background-color #62c462
  &:after
    content "Выполненный заказ"
    margin-left -120px
.soon
  background-color #5bc0de
  &:after
    content "Заказ на комплектации"
    margin-left -130px
.prepare
  background-color #9baab3
  &:after
    content "Заказ готов"
    margin-left -60px
.made:after
.soon:after
.prepare:after
  position absolute
  background-color rgba(0,0,0,.5)
  border-radius main-radius
  padding 2px 5px
  color #fff
  display none
.made:hover:after
.soon:hover:after
.prepare:hover:after
  display block

.day-menu
  position absolute
  width 150px
  a
    display block
    padding 5px 10px
    background #9baab3

.ui-menu-item
.ui-autocomplete-category
  list-style none
.ui-helper-hidden-accessible
  display none
.icon-search:hover
  text-decoration none
.ui-menu-item a:hover
  text-decoration none

.breadcrambs
  margin-bottom 10px
  a
    font-weight normal
  span
    display inline-block
    margin 0 2px
  span

.shop-menu
  overflow auto
  margin-bottom 10px
  ul
    margin-left 0
    li
      list-style none
      float left
      margin-left 5px
      width 80px
      text-align center
      line-height 14px
      font-size 11px
      &:first-child
        margin-left 0
        width 50px
      &.active
        a
          color #2a6496
      a
        display block
        font-size 24px
        &:hover
          text-decoration none

.catalog
  table
    width 100%
    thead
      tr
        td
          background #f9f9f9
          font-style italic
    tr
      &:first-child
        td
          border-top 1px solid #ccc
      td
        vertical-align middle
        border-bottom 1px solid #ccc
        padding 5px 0
        text-align center
        &:first-child
          text-align left
          width 70%
          padding-left 5px
        img
          width 20px
          float left
        .fa
          font-size 24px
          color #428bca
          cursor pointer
          &:hover
            color #2a6496
        span
          display block
          margin-left 30px
          margin-right 10px

.ace-spinner
  width 50px !important
  .input-mini
    width 30px
    padding 5px 2px
  .spinner-down:hover
  .spinner-up:hover
    background-color rgb(111, 179, 224) !important

.empty-basket
  font-size 24px
  text-align center
  color #ccc

.modal
  width 560px
  left 50%
  margin-left -285px
  background #fff
  top 20%
  max-height 288px
  overflow-y auto
  .close
    outline none
  .product-slider
    float left
    .flexslider
      width 200px
      margin-bottom 0
      box-shadow none
      overflow hidden
      .flex-direction-nav a
        background url(../i/bg_direction_nav.png) no-repeat 0 0
      .flex-direction-nav .flex-next
        background-position 100% 0
    .slider
      img
        max-width 192px
        width auto
    .carousel
      img
        max-width 60px
      li
        cursor pointer
  .product-descr
     margin-left 210px
    h3
      margin-top 0
    .product-text
      height 170px
      overflow auto
    .modal-body
      padding 10px
      position static
    .modal-footer
      position absolute
      bottom 20px
      right 10px
      width 330px
      background #fff
      text-align left
      padding 0
      padding-top 15px
      span
      .ace-spinner
      .fa
        display inline-block
        vertical-align middle
        margin 0 23px
      span
        font-size 20px
.modal-order-end
  max-height 312px
  .modal-body-list
    max-height 148px
    display block
    overflow auto
    tbody
      width 100%
      display block
      tr
        width 100%
        display block
        td:first-child
          padding-right 0
          width 70%
        td
          padding 5px
          width 10%
  .modal-footer
    //position static
    bottom 0
    border 0
    padding 0
    margin 0
    margin-bottom 5px
    text-align right
    width auto
    padding-right 10px
    font-size 20px
    .btn
      float right
      margin 5px
    .modal-itogo
      border 0
      padding 0
      margin 0
      span
        margin 0
        vertical-align baseline

.sidebar#sidebar
  height 100%
  left 0
  top 0
  bottom 0
  position absolute
  z-index 2
  .show-left
    display none

@media all and (max-width: 990px)
  .shop-right
    position fixed
    height 100%
    right -250px
    z-index 10
    padding 0 0 20px 0
    border-bottom 1px solid #ccc
    &:before
      display none
    .show-right
      display block
      position fixed
      top: 40%
      right -28px
      border-radius 5px 5px 0 0
      cursor pointer
      font-size 16px
      letter-spacing 1px
      border 1px solid #ccc
      background #ccc
      padding 0 10px
      transform -90deg;
    .hide-right
      display block;
      position absolute
      top 10px
      right 10px
      cursor pointer
  .main-content
    margin-right 0
  .catalog table tr td:first-child
    width 450px

@media all and (max-width: 768px),screen and (device-width: 320px)
  .sidebar#sidebar
    margin-left -190px
    .show-left
      display block
      position fixed
      top: 40%
      left -22px
      border-radius 5px 5px 0 0
      cursor pointer
      font-size 16px
      letter-spacing 1px
      border 1px solid #ccc
      background #ccc
      padding 0 10px
      transform 90deg;
  .container
    width 758px
    .main-content
      margin-left 0

@media screen and (device-width: 320px)
   .container
      width 100%

/* страница регистрации */
.registration-form
  width 580px
  padding 0 10px
  margin 30px auto
  border 1px solid #438eb9
  border-radius main-radius
  h1
    margin 0 -10px
    padding 10px
    background #438eb9
    color #fff
  h3
    border-bottom 1px solid #438eb9
    padding-bottom 5px
    margin-bottom 15px
  .reg-soc
    a
      font-size 50px
      margin 0 10px
      &:hover
        text-decoration none
  .reg-now
    &>div
      margin-bottom 10px
    label
      width 200px
      span
        color #d2322d
        &:before
          margin-right 5px !important
    .radio
      display inline-block
      vertical-align baseline
      margin 0
      span
        color #000
    .form-control
      display inline-block
  .btn-primary
    width 200px
    margin 20px auto
    font-size 20px
