@import 'bootstrap.min.css'
@import 'font-awesome-original.css'
@import 'font-awesome.min.css'
@import 'ace-fonts.css'
@import 'ace.css'

main-radius = 2px
second-radius = 1px

html
  height 100%

body
  background #fff
  height 101%

a
  outline none !important

h1
  margin-top 10px
  font-size 24px

transform()
  -moz-transform rotate(arguments); /* Для Firefox */
  -ms-transform rotate(arguments); /* Для IE */
  -webkit-transform rotate(arguments); /* Для Safari, Chrome, iOS */
  -o-transform rotate(arguments); /* Для Opera */
  transform rotate(arguments);

.btn-primary
.header-color-blue2
  background-color #438eb9 !important

.container
  padding 0
  max-width 1240px
  min-width 753px
  min-height 100%

.ace-nav>li
  a
    padding 11px 12px 0 12px
    line-height 1.428571429
    font-size 16px
    border none
    border-bottom 3px solid rgb(111, 179, 224)
  &.active
    a
      border-bottom-color #2b7dbc

.ace-nav>.user-short a
  border none
  padding 3px 8px
  font-size 14px

.ace-nav>.user-short>a
  line-height inherit
  padding 0 8px
  font-size 16px

.nav-list > li > a
  padding 8px 10px 10px 16px
  height auto
  line-height 20px
  position relative
  span
    display inline-block
    vertical-align middle
    width 134px
  b
    display inline-block
    vertical-align middle

.nav-list > li > a,
.nav-list > li.active > a,
.nav-list > li.active:hover a
  font-size 15px

.sidebar#sidebar
  height 100%
  left 0
  top 0
  bottom 0
  position absolute
  z-index 13
  .show-left
    display none

.btn
  border-radius main-radius !important

.submenu
  padding 5px 0 2px 0
  background #d9edf7
  >ul
    display inline-block
    vertical-align middle
    margin-bottom 0
    margin-left 5px
    li
      list-style none
      display inline-block
      margin-left 5px
      margin-bottom 5px
      border-top 3px solid rgb(111, 179, 224)
      border-radius main-radius
      a
        font-size 14px
        padding-top 1px
        border-radius 0 0 main-radius main-radius !important
      &.active
        border-color #2b7dbc
      &:hover
        border-color #4f99c6
  .btn-group
    margin-left 5px
    border-top 0
    &.active .btn
      border-color #2b7dbc
    ul
      padding-bottom 0
    li
      border-top 0
      display block
      margin 0
      margin-bottom 5px
      a
        font-size 13px
    .btn
      font-size 14px
      border 0
      border-top 3px solid rgb(111, 179, 224)
      height 35px
      padding-bottom 7px
      &:hover
        border-color #4f99c6

.btn-group>.btn
  border-radius main-radius !important

.dropdown-menu
  min-width 115px

.options
  padding 8px 0 5px 10px
  height 44px
  text-align center
  .form-group
    margin 0 130px 0 120px
    input
      height 30px
      border-radius main-radius !important
    .icon-search
      padding-top 1px
      padding-right 5px
      &:hover
        text-decoration none
  .btn-group
    float right
    margin-right 14px
    height 30px
    text-align left
  .btn-primary
    font-size 14px
    float left

.sidebar
  padding-top 20px
  vertical-align top

.main-content
  border-right 10px solid #f2f2f2;
  min-height 200%

.widget-main
  overflow auto
  padding-bottom 5px

.fa:hover{
  text-decoration none
}

.topic-item
  //margin-left 10px
  margin-bottom 10px
  .topic-descr
    border 1px solid rgb(80, 144, 193)
    border-radius main-radius
    .topic-header-left
      display none
    header
      height 40px
      line-height 37px
      &:after
        clear none
      .widget-toolbar
        float right
        vertical-align middle
        padding-left 10px
        margin-right 8px
        padding-right 0
        border-left 1px solid #fff
        height 100%
        a
          display inline-block
          vertical-align middle
          margin 0 4px
          color #fff
          font-size 1.5em
          &:hover
            text-decoration none
      h2
        margin 0 100px 0 110px
        vertical-align middle
        height 39px
        line-height 39px;
        overflow hidden
        font-size 18px
        font-weight bold
        &.small
          font-size 16px;
        span
          vertical-align middle
          line-height 18px
          display inline-block
          float none
      span
        float left
        vertical-align middle
    .topic-right
      margin-left 115px
      .fa-relations
        float right
        font-size 16px
        opacity 0
      .fa-sitemap
        float right
        margin-right 10px
        opacity 0
      .likes
        text-align right
        a
          display inline-block
          &:hover
            text-decoration none
        .like-item
          display inline-block
          margin 0 5px
          font-size 18px
          span
            display inline-block
            font-size 14px
            color #000
    .topic-left
      float left
      text-align center
      width 95px
      img
        width 95px
      .topic-author
        font-size 14px
      .author-rating
        a
          display inline-block
          &:hover
            text-decoration none
    footer
      clear left
      line-height 30px
      border-radius 0 0 main-radius main-radius
      padding 0
      height 38px
      .answers-ctrl
        display inline-block
        vertical-align middle
        text-align center
        width 115px
        height 37px
        border-right 1px solid rgb(204, 204, 204)
        a
          display inline-block
          vertical-align top
          font-size 30px
          line-height 40px
          &:hover
            text-decoration none
        span
          display inline-block
          vertical-align middle
          line-height 35px
          margin-left 10px
          span
            margin-left 0
          a
            font-size 12px
            display inline-block
            color #000
            font-weight bold
            line-height 35px
            vertical-align middle
            &:hover
              text-decoration underline
      .ans-btn
        float right
        margin 3px 8px 0 0
      .topic-statistic
        display inline-block
        vertical-align middle
        margin-left 10px
    &.one-message
      //margin 10px 0
      .answer-date
        color #808080
        float left
        margin-top 5px
      .message-author
        margin-bottom 10px
        font-size 14px

.one-message
  .like-item
    .fa
      margin-right 5px

.alert
  padding 0
  margin-bottom 5px

.one-message
  border-radius second-radius !important

.wysiwig-box
  display none

.one-message+.wysiwig-box
  border 1px solid #5090c1

.widget-header.fixed
  position fixed
  top 0
  z-index 10
  margin-left -1px
  .topic-header-left
    display inline-block
    line-height 40px
    width 101px
    i
      cursor pointer
      font-size 1.5em
      margin-left 20px
      vertical-align middle
      &.fa-minus,
      &.fa-plus
        font-size 30px
  .topic-header-date
    display none

.dd>.dd-list>.topic-item
  margin-left 10px
  &.list-view
    .dd-list
      padding-left 0

.dd>.dd-list>.topic-item.list-view>.dd-list
  padding-left 30px

.dd-item
  min-height 0
  margin 10px 0

.wysiwyg-editor
  a
    cursor pointer

@media all and (max-width: 768px),screen and (device-width: 320px)
  .sidebar#sidebar
    margin-left -190px
    .show-left
      display block
      position fixed
      top: 40%
      z-index 120
      left -22px
      border-radius 5px 5px 0 0
      cursor pointer
      font-size 16px
      letter-spacing 1px
      border 1px solid #ccc
      background #ccc
      padding 0 10px
      transform 90deg;
  .container
    width 100%
    .main-content
      margin-left 0

/* создание темы */
.create-topic
  padding 0 10px
  >.btn-group
    float right
    margin-left 5px
  .wysiwig-box
    display block
    .pull-left .btn
      margin-right 5px
  .wysiwyg-editor
    border-left 1px solid #ccc

/* профиль */
.user-descr
  padding 0 0 0 10px
  font-size 14px
  .ava-area
    float left
    width 200px
    padding 10px 0 0 0
    img
      width 100%
    .fa
      font-size 24px
    .user-rating
      text-align center
      margin 10px 0 10px 0
  .soc-accounts
    float right
    width 180px
    padding 10px 0 0 0
    .fa
      font-size 34px
      margin 10px 5px 0 5px
  .text-area
    margin 0 200px 0 215px
    .user-head
      h1
        display inline-block
        margin-bottom 0
      a
        color #CCCCCC
      .confirm-alert
        float right
        font-weight bold
        margin 17px 10px 0 0
    .user-body
      margin 15px 0 0 0
      line-height 26px
      h3
        font-size 20px
      span
        width 170px
        display inline-block

@media all and (max-width: 1024px)
  .user-descr
    .ava-area
      width 120px
      .fa
        font-size 20px
    .text-area
      margin 0 180px 0 130px

 /* настройки */
.settings
.edit-personal
  padding 0 10px
  .tabbable
    z-index 5
  h3
   margin-top 10px
  .tab-content
    margin-bottom 10px
  .tab-pane
    label
      display inline-block
      width 160px
    .form-control
      display inline-block
      width 200px
      margin 0 0 10px 0
    .subs-group
      display inline-block
      border-left 1px solid #2b7dbc
      padding-left 15px
    .checkbox label
      width auto
  input[type="text"]
  textarea
    margin-bottom 10px
    width 200px

.create-topic-wrap
.edit-personal-wrap
.settings-wrap
.user-descr-wrap
  display none

#subscription>label
  text-align right
  width auto
  padding-right 10px
  vertical-align top

/* страница регистрации */
.login-forms
  width 650px
  margin 30px auto
.registration-form
  width 320px
  height 260px
  vertical-align top
  display inline-block
  padding 0 10px
  position relative
  border 1px solid #438eb9
  border-radius main-radius
  h1
    margin 0 -10px
    padding 10px
    background #438eb9
    color #fff
    text-align center
  h3
    border-bottom 1px solid #438eb9
    padding-bottom 5px
    margin-bottom 15px
  .reg-soc
    a
      font-size 50px
      margin 0 10px
      &:hover
        text-decoration none
  .reg-now
    &>div
      margin-bottom 10px
    a
      float right
      margin-right 15px
      padding-top 3px
      color #ccc
    label
      width 60px
      span
        color #d2322d
        &:before
          margin-right 5px !important
    .radio
      display inline-block
      vertical-align baseline
      margin 0
      span
        color #000
    .form-control
      display inline-block
  .btn-submit
    width 140px
    background #438eb9
    color #fff
    font-size 20px
    display block
    position absolute
    bottom 10px
    left 50%
    margin-left -70px
    &:hover
      background #1b6aaa
  input[type="text"]
  input[type="email"]
  input[type="tel"]
  input[type="password"]
    width 220px
  #captcha
    width 155px
  input[type="file"]
  .captcha
    display inline-block

#selectGroup
  margin-right 15px
  float right




