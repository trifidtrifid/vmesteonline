@import 'common.css'

/* страница регистрации */
.login-forms
  width 650px
  margin 30px auto
.registration-form
  width 320px
  height 260px
  vertical-align top
  display inline-block
  padding 0 10px
  position relative
  border 1px solid #438eb9
  border-radius main-radius
  h1
    margin 0 -10px
    padding 10px
    background #438eb9
    color #fff
    text-align center
  h3
    border-bottom 1px solid #438eb9
    padding-bottom 5px
    margin-bottom 15px
  .reg-soc
    a
      font-size 50px
      margin 0 10px
      &:hover
        text-decoration none
  .reg-now
    &>div
      margin-bottom 10px
    a
      float right
      margin-right 15px
      padding-top 3px
      color #ccc
    label
      width 60px
      span
        color #d2322d
        &:before
          margin-right 5px !important
    .radio
      display inline-block
      vertical-align baseline
      margin 0
      span
        color #000
    .form-control
      display inline-block
  .btn-submit
    width 140px
    background #438eb9
    color #fff
    font-size 20px
    display block
    position absolute
    bottom 10px
    left 50%
    margin-left -70px
    &:hover
      background #1b6aaa
  input[type="text"]
  input[type="email"]
  input[type="tel"]
  input[type="password"]
    width 220px
  #captcha
    width 155px
  input[type="file"]
  .captcha
    display inline-block
  .email-alert
    color #ff0000
    display none
    text-align center
  .set-new-password
    display none
    clear right
    margin-top 4px
    .btn
      margin-top 10px
      float right
      margin-right 14px
    #go2
      position static
      width 100px
      float right

#selectGroup
  margin-right 15px
  float right

@media all and (max-width: 650px)
  .modal-auth
    width 100% !important
    left 0 !important
    margin-left 0 !important
    height 320px !important
  .modal-auth .container
    width 90%
  .login-forms
    width 100%
  .registration-form
    width 49%
    height 290px !important
    h1
      font-size 20px
      padding 8px
    input
      width 98% !important
    .set-new-password .btn
      padding 2px 0
      font-size 12px
      margin-right 0
      float none
      display inline-block
      width 48%
    label
      font-size 12px
      width auto !important

@media all and (max-width: 380px)
  .registration-form
    h1
      font-size 14px
    .btn-submit
      width 100px
      margin-left -50px
      font-size 14px