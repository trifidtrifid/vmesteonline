	<servlet>
		<servlet-name>AuthSericeServlet</servlet-name>
		<servlet-class>com.vmesteonline.be.AuthSericeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthSericeServlet</servlet-name>
		<url-pattern>/thrift/AuthService</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserServiceServlet</servlet-name>
		<servlet-class>com.vmesteonline.be.UserServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServiceServlet</servlet-name>
		<url-pattern>/thrift/UserService</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>MessageServiceServlet</servlet-name>
		<servlet-class>com.vmesteonline.be.MessageServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MessageServiceServlet</servlet-name>
		<url-pattern>/thrift/MessageService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DialogServiceServlet</servlet-name>
		<servlet-class>com.vmesteonline.be.DialogServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DialogServiceServlet</servlet-name>
		<url-pattern>/thrift/DialogService</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>ShopServiceServlet</servlet-name>
		<servlet-class>com.vmesteonline.be.ShopServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShopServiceServlet</servlet-name>
		<url-pattern>/thrift/ShopService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ShopBOServiceServlet</servlet-name>
		<servlet-class>com.vmesteonline.be.ShopBOServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShopBOServiceServlet</servlet-name>
		<url-pattern>/thrift/ShopBOService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FileAccess</servlet-name>
		<servlet-class>com.vmesteonline.be.VoFileAccess</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileAccess</servlet-name>
		<url-pattern>/file/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ShopMain</servlet-name>
		<jsp-file>/shop.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShopMain</servlet-name>
		<url-pattern>/market/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>main.jsp</welcome-file>
	</welcome-file-list>
